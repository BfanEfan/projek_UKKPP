<main class="p-8 bg-gradient-to-b from-slate-200 to-slate-300 min-h-screen">

  <!-- Judul + Search -->
  <div class="flex items-center justify-between mb-6">
    <h2 class="text-3xl font-bold text-slate-700 mx-auto">Data siswa</h2>

    <form action="/dasis" method="GET" class="flex items-center gap-2">
      <div class="flex bg-slate-300 rounded-full overflow-hidden shadow-sm">
        <span class="px-3 flex items-center text-lg">ðŸ”Ž</span>
        <input 
          type="text" 
          name="keyword"
          value="<%= keyword %>"
          placeholder="Search..."
          class="px-4 py-2 outline-none bg-white w-64 text-sm"
        >
      </div>
    </form>
  </div>

  <!-- Card Table -->
  <div class="bg-white rounded-xl shadow-md overflow-hidden border border-slate-200">
    <table class="w-full text-left">
      <thead class="bg-slate-100 text-slate-600">
        <tr>
          //tambahkan ini mas baiq
          <th class="p-4 font-semibold">NIPD</th>
          <th class="p-4 font-semibold">Nama siswa</th>
          <th class="p-4 font-semibold">Kelas</th>
          <th class="p-4 font-semibold">Jurusan</th>
          <th class="p-4 font-semibold">Total Point</th>
        </tr>
      </thead>

      <tbody class="div  ide-y divide-slate-200 text-slate-700">
        <% siswa.forEach(s => { %>
          <tr class="hover:bg-slate-50 transition">
            <td class="p-4"><%= s.nipd %></td>
            <td class="p-4"><%= s.nama_siswa %></td>
            <td class="p-4"><%= s.kelas %></td>
            <td class="p-4"><%= s.jurusan %></td>
            <td class="p-4 font-semibold text-slate-600">
              <%= s.total_poin %>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>

</main>
